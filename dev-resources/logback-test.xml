<configuration scan="true">
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d %-5p [%t] [%c{2}] %m%n</pattern>
        </encoder>
    </appender>

    <!--<logger name="log4j.logger.org.eclipse.jetty.server" level="warn"/>-->

    <root level="warn">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
